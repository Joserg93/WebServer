
@{
    ViewBag.Title = "Subir Nuevo Archivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @ViewBag.Title
    <link href="~/Content/Register.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
</h2>
<div class="container">
    <div class="row main">
        <div class="main-login main-center">
            @using (Html.BeginForm("Create", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="email" class="cols-sm-2 control-label">Nuevo Archivo</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-file-text fa" aria-hidden="true"></i></span>
                            <input type="file" class="form-control" name="file" id="file" readonly placeholder="Dirección del archivo" required autofocus />
                        </div>
                    </div>
                </div>
                <div class="form-group ">
                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Guardar</button>
                    <a href="/Profile" class="btn btn-primary btn-lg btn-block login-button">Volver</a>
                </div>
            }
        </div>
    </div>
</div>


